//function to create pyramid using *
function createPyramid(a){
  for(var i=1; i<=a; i++){
    var store='';
    var k=0;
    for(var j=1; j<=a-i; j++){
      store+="  ";
    }
    while(k!= 2*i-1){
     store+="* ";
      k++;
    }
    console.log(store);
  }     
}
//call create pyramid function
createPyramid(7);
